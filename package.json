{
  "name": "infoscreen",
  "version": "0.0.2",
  "description": "An info screen program made by Frikk O. Larsen",
  "main": "boot.js",
  "dependencies": {
    "app-buttons": "^1.3.1",
    "electron-context-menu": "^2.3.0",
    "electron-debug": "^3.1.0",
    "electron-store": "^6.0.1",
    "electron-unhandled": "^3.0.2",
    "electron-util": "^0.14.2",
    "fs": "0.0.1-security",
    "node-zip": "^1.1.1"
  },
  "devDependencies": {
    "electron-builder": "^22.9.1",
    "electron-reloader": "^1.0.1",
    "electron": "^5.0.6"
  },
  "build": {
    "appId": "appId",
    "productName": "Info Screen (alpha)",
    "target": "NSIS",
    "directories": {
      "buildResources": "build"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "scripts": {
